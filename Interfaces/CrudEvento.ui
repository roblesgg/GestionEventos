/* --- Estilo General --- */
QWidget {
    font-family: 'Segoe UI', 'Arial', 'sans-serif';
    background-color: #F8F9FA; /* Un blanco roto muy suave */
    color: #333333; /* Texto oscuro principal */
}

/* --- Títulos --- */
QLabel[objectName^="TitleLabel"] {
    font-size: 24pt;
    font-weight: bold;
    color: #2C3E50; /* Un azul oscuro */
    padding-bottom: 10px;
    background-color: transparent; /* Títulos sin fondo */
}

/* --- Botones Principales --- */
QPushButton {
    background-color: #E0EFFF; /* Azul pastel */
    color: #2C3E50;
    font-size: 11pt;
    font-weight: bold;
    border: none;
    border-radius: 8px; /* ¡ESQUINAS REDONDEADAS! */
    padding: 12px 18px;
    min-height: 28px;
}

QPushButton:hover {
    background-color: #C6DFFF; /* Un poco más oscuro al pasar el ratón */
}

QPushButton:pressed {
    background-color: #B0D0FF; /* Al presionar */
}

/* --- Botones de "Peligro" (Borrar) --- */
QPushButton[objectName="DeleteEvent_Btn"] { /* Específico para tu botón */
    background-color: #FFEBEE; /* Rosa pastel */
    color: #D32F2F; /* Rojo oscuro */
}

QPushButton[objectName="DeleteEvent_Btn"]:hover {
    background-color: #FFCDD2;
}

/* --- Tablas --- */
QTableWidget {
    background-color: #FFFFFF;
    border: 1px solid #E0E0E0;
    gridline-color: #E0E0E0; /* Color de la cuadrícula */
    border-radius: 8px; /* ESQUINAS REDONDEADAS */
}

/* --- Cabeceras de Tablas --- */
QHeaderView::section {
    background-color: #F1F3F5; /* Un gris muy claro para cabeceras */
    padding: 8px;
    border: none;
    font-weight: bold;
    font-size: 10pt;
}
